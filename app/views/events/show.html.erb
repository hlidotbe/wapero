

	<h1><%= @event.title %> <span class=date>- <%=@event.event_day.strftime '%d/%m/%y %I:%M'%>  </span></h1> <%if @event.event_day > DateTime.now %>
      <%if !@event.users.include? current_user%>
        <%= link_to 'Join', join_event_path(@event), :method => :post, :class => "button_link join"%>
      <%else%>
        <%= link_to 'Leave', leave_event_path(@event) , :method => :delete, :class => "button_link join"%>
      <%end%>
    <%end%>
  <p class=description>
    <%= markdown(@event.description) %>
  </p>
  <p>
  	<strong>Lieu:</strong>
    <% if not @event.geocoded.nil? and @event.geocoded['status'] == 'OK' %>
    <div id="map" style="width: 600px; height: 300px;">&nbsp;</div>
    <% end %>
  </p>
  <p><%= @event.location %></p>
  <p>
    <strong>Participants:</strong>
    <ul>
      <% @event.users.each do |user|%>
        <li><%= link_to user.name, user %></li>
      <%end%>
    </ul>
    
  </p>
  <p>
	<strong>Comments:</strong>
	<ul class=comments>
	<% @event.comments.lifo.each do |comment| %>
		<li><%= link_to gravatar_image_tag(comment.author.email), comment.author , :class => 'gravatar_link'%><span class=comment_info>  <%=comment.created_at.strftime '%d.%m.%y %I:%M'%></span><%= markdown(comment.comment_body)%> </li>
	<%end%>
	</ul>
  	<%if user_signed_in?%>
		<%= render "comment_form" %>
	<%end%>
  </p>



<% if not @event.geocoded.nil? and @event.geocoded['status'] == 'OK' %>
  <% content_for :javascript_includes do %>
  <script type="text/javascript"
      src="http://maps.google.com/maps/api/js?sensor=true">
  </script>
  <script type="text/javascript">
    function initialize() {
      var latlng = new google.maps.LatLng(<%= @event.geocoded['results'][0]['geometry']['location']['lat'] %>, <%= @event.geocoded['results'][0]['geometry']['location']['lng'] %>);
      var myOptions = {
        zoom: 8,
        center: latlng,
        mapTypeId: google.maps.MapTypeId.ROADMAP
      };
      var map = new google.maps.Map(document.getElementById("map"),
        myOptions);
      var marker = new google.maps.Marker({
        position: latlng,
        title:"<%= @event.location %>"
      });
      // To add the marker to the map, call setMap();
      marker.setMap(map); 
    }

    $(window).bind('load', initialize);
  </script>
  <% end %>
<% end %>

